source "https://rubygems.org"

gem "jekyll", "~> 4.0"    # Or the latest version
gem "minima", "~> 2.5"    # Or the latest version (if you're using it)
gem "al-folio"
gem "jekyll-feed"          # For generating an Atom feed
gem "jekyll-seo-tag"       # For SEO meta tags
gem "jekyll-paginate"      # For pagination in blog posts (optional)

group :jekyll_plugins do
  gem "jekyll-sitemap"    # For generating a sitemap.xml
end
